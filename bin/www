require('dotenv').config();

const server = require('../lib/server');
const jobManager = require('../lib/job-manager');

const init = async () => {

  await jobManager.startJobs();
  await server.start();
  console.log('Server running on %s', server.info.uri);
};

process.on('unhandledRejection', (err) => {

  console.log(err);
  process.exit(1);
});

init();