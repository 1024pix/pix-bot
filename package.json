{
  "name": "pix-bot",
  "version": "1.54.0",
  "description": "Automating development actions",
  "engines": {
    "node": "16",
    "npm": "8"
  },
  "main": "bin/www",
  "scripts": {
    "configure": "cp sample.env .env && npm ci",
    "deploy": "npm run deploy:minor",
    "deploy:major": "npm version major && npm run deploy:tag",
    "deploy:minor": "npm version minor && npm run deploy:tag",
    "deploy:patch": "npm version patch && npm run deploy:tag",
    "deploy:tag": "git push --tags && git push",
    "lint": "npm run lint:dependencies && npm run lint:code",
    "lint:code": "eslint .",
    "lint:dependencies": "depcheck",
    "local:trigger-lint-on-commit": "husky install",
    "local:prevent-trigger-lint-on-commit": "git config --unset core.hooksPath",
    "preinstall": "npx check-engine",
    "start": "node bin/www",
    "test": "NODE_ENV=test mocha --recursive --exit test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/1024pix/pix-bot.git"
  },
  "author": "GIP Pix",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/1024pix/pix-bot/issues"
  },
  "homepage": "https://github.com/1024pix/pix-bot#readme",
  "dependencies": {
    "@hapi/boom": "^10.0.0",
    "@hapi/hapi": "^21.1.0",
    "@octokit/rest": "^19.0.5",
    "axios": "^1.2.1",
    "cron": "^2.1.0",
    "dayjs": "^1.11.7",
    "dotenv": "^16.0.3",
    "lodash": "^4.17.21",
    "scalingo": "^0.8.0",
    "scalingo-review-app-manager": "^1.0.5",
    "sib-api-v3-sdk": "^8.4.2",
    "slack-block-builder": "^2.7.2",
    "tsscmp": "^1.0.6"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-nock": "^1.3.0",
    "depcheck": "^1.4.3",
    "eslint": "^8.29.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-mocha": "^10.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "fs-extra": "^11.1.0",
    "http-status-codes": "^2.2.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "mocha": "^10.2.0",
    "nock": "^13.2.9",
    "prettier": "^2.8.1",
    "proxyquire": "^2.1.3",
    "simple-git": "^3.15.1",
    "sinon": "^15.0.0",
    "sinon-chai": "^3.7.0"
  }
}
